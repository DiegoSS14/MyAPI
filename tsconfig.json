{
    "compilerOptions": {
        "lib": ["es2021"],
        "target": "es2021",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "typeRoots": ["./src/@types", "./node_modules/@types"] // Identifica sobrescritas de tipos
    },
    "include": ["src/**/*.ts"]
}
